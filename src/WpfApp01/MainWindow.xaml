<Window x:Class="WpfApp01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp01"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="YellowButton" Width="200" Height="75" Content="1" BorderBrush="Black" Background="#FFFFD303" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Georgia" Click="YellowButton_Click"/>
        <Button x:Name="GreenButton" Width="200" Height="75" Content="2" BorderBrush="Black" Background="#FF31BD00" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Georgia" Click="GreenButton_Click" />
        <Button x:Name="PurpleButton" Width="200" Height="75" Content="3" BorderBrush="Black" Background="#FF9718C8" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontFamily="Georgia" />
    </Grid>
</Window>
