<Window x:Class="WpfApp05.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp05"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" ResizeMode="CanMinimize">
    <Grid>
        <DataGrid x:Name="dgOrig" Height="390" Width="380" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5" CanUserSortColumns="False"/>
        <DataGrid x:Name="dgEdit" Height="390" Width="380" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5" CanUserSortColumns="False"/>
        <TextBox x:Name="tbNum" Text="10" Height="30" Width="80" VerticalContentAlignment="Center" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,15"></TextBox>
        <TextBlock x:Name="Sum" HorizontalAlignment="Center" Margin="0,0,0,110" TextWrapping="Wrap" Text="Сумма S: " VerticalAlignment="Bottom" Height="30" Width="152"/>
        <Button x:Name="Butt" Content="Рандомизировать" HorizontalAlignment="Center" Margin="0,00,0,50" VerticalAlignment="Bottom" Height="54" Width="162" Click="Butt_Click"/>
    </Grid>
</Window>
