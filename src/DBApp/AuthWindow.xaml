<Window x:Class="DBApp.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBApp"
        mc:Ignorable="d"
        Title="Auth" Height="380" Width="261" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <StackPanel>
            <TextBlock Text="Username" FontSize="14" Margin="50,70,50,5"/>
            <TextBox x:Name="UsernameTextBox" TextWrapping="NoWrap" Margin="50,0,50,5" Height="25" VerticalContentAlignment="Center"/>
            <TextBlock Text="Password" FontSize="14" Margin="50,30,50,5"/>
            <PasswordBox x:Name="PasswordPasswordBox" Margin="50,0,50,5" Height="25" VerticalContentAlignment="Center"/>
            <Button x:Name="LoginButton" Content="Login" FontSize="16" Margin="50,55,50,5" Height="40" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
